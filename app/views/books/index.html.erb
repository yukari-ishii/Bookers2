<div class="user_info">
  <h1>User info</h1>
</div>

<div class="new_book">
  <h1>New book</h1>
    <%= form_with model: @book do |f| %>
      <h4>Title</h4>
        <%= f.text_field :title %>
      <h4>Opinion</h4>
        <%= f.text_area :body %><br>
      <%= f.submit 'Create Book' %>
    <% end %>
</div>

<div class="books">
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
        <td>
          <%= link_to book_path(book.id) do %>
            <%= book.title %></td>
          <% end %>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
