<div class="container">
  <div class="row">
    <div class="col-lg-4 side_bar">
      <%= render 'users/user', user: @user %>

      <%= render 'book', book: @book %>
    </div>
    <div class="col-lg-8 books">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image(100, 100) %>
              ã€€<%= link_to book_path(book.id) do %>
                <%= book.title %></td>
              <% end %>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
     </table>
    </div>
  </div>
</div>