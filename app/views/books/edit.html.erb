<div class="user_info">
  <h1>User info</h1>
</div>

<div class="new_book">
  <h1>New book</h1>
    <%= form_with model: @book do |f| %>
      <h4>Title</h4>
        <%= f.text_field :title %>
      <h4>Opinion</h4>
        <%= f.text_area :body %><br>
      <%= f.submit 'Create Book' %>
    <% end %>
</div>

<div class="editing_book">
  <%= form_with model:@book, url: book_path(@book.id), method: :patch do |f| %>
    <h1>Editing book</h1>
      <h3>Title</h3><br>
        <%= f.text_field :title %>
      <h3>Opinion</h3><br>
        <%= f.text_area :body %>
      <br><%= f.submit 'Update Book' %>
  
      <br><%= link_to "Show", book_path(@book.id) %>
          <%= link_to "Back", "/books" %>
  <% end %>
</div>