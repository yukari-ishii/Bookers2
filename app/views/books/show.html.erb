<div class="user_info">
  <h1>User info</h1>
</div>

<div class="new_book">
  <h1>New book</h1>
    <%= form_with model: @book do |f| %>
      <h4>Title</h4>
        <%= f.text_field :title %>
      <h4>Opinion</h4>
        <%= f.text_area :body %><br>
      <%= f.submit 'Create Book' %>
    <% end %>
</div>

<div class="book_detail">
  <h1>Book detail</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>画像</td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <td>
          <% if @book.user == current_user %>
          <%= link_to "Destroy", book_path(@book), method: :delete %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>

