<div class="user_info">
  <h1>User info</h1>
    
</div>

<div class="new_book">
  <h1>New book</h1>
    <%= form_with model: @book do |f| %>
      <h4>Title</h4>
        <%= f.text_field :title %>
      <h4>Opinion</h4>
        <%= f.text_area :body %><br>
      <%= f.submit 'Create Book' %>
    <% end %>
</div>

<div class="users">
  <h1>Users</h1>
  <table>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(100, 100) %></td>
        <td>
          <%= user.name %></td>
        <td>
          <%= link_to "show", user_path(user.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
