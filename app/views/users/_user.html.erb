<div class="user_info">
  <h2>User info</h2>
  
  <%= image_tag user.get_profile_image(150, 150) %>
  <table class="table">
      <tr><th>name</th><th><%= user.name %></th></tr>
      <tr><th>introduction</th><th><%= user.introduction %></th></tr>
  </table>
  <%= link_to edit_user_path(user.id), class: "btn btn-secondary btn-block" do %>
    <i class="fa-solid fa-user-gear"></i>
  <% end %>
</div>