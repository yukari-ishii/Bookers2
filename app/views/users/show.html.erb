<%= render 'user', user: @user %>

<%= render 'books/book', book: @book %>





<div class="books">
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
        <td>
          <%= link_to book_path(book.id) do %>
            <%= book.title %></td>
          <% end %>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
